<div class="container-fluid py-5">

  <h3>ログイン</h3>
  
  <div class="d-flex flex-column text-center">
    <div class="row d-flex justify-content-center">
    <h4 width="100%">会員の方はこちらからログイン</h4>
    </div>
    <div class="row form-group mb-5 d-flex justify-content-center">
      <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      
        <table class="table">
          <tr class="field">
            <th><%= f.label :"メールアドレス" %></th>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr class="field">
            <th><%= f.label :"パスワード" %></th>
            <td>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </td>
          </tr>
        </table>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="action text-center">
    <%= link_to 'こちら', new_customer_registration_path, class:"btn btn btn-success mr-3"  %>からログインしてください。
    </div>
  </div>
</div>
