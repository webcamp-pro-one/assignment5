<div class="container-fluid flex-column py-5">
<h3 class="text-center mb-4">新規会員登録</h3>


  <div class="row d-flex justify-content-center">
    <div class="form-group mb-5">
      <%= form_with model: @customer, url:customer_registration_path, id:'new_customer', class:'new_customer' do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <table class="table table-borderless">
            <tr class="field row-md">
              <th width="10%"><%= f.label :"名前" %></th>
              <td width="10%" class="text-nowrap"><%= f.label :"(姓)" %></td>
              <td>
                <%= f.text_field :last_name, autofocus: true %>
              </td>
              <td width="10%" class="text-nowrap"><%= f.label :"(名)" %></td>
              <td>
                <%= f.text_field :first_name, autofocus: true %>
              </td>
            </tr>
            <tr class="field row-md">
              <th><%= f.label :"フリガナ" %></th>
              <td><%= f.label :"(セイ)" %></td>
              <td>
                <%= f.text_field :last_name_kana, autofocus: true %>
              </td>
              <td><%= f.label :"(メイ)" %></td>
              <td>
                  <%= f.text_field :first_name_kana, autofocus: true %>
              </td>
            </tr>
            <tr class="field">
              <th><%= f.label :"メールアドレス" %></th>
              <td></td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </td>
            </tr>
            <tr class="field">
              <th class="text-nowrap"><%= f.label :"郵便番号(ハイフンなし)" %></th>
              <td></td>
              <td><%= f.text_field :postal_code, autofocus: true %></td>
            </tr>
            <tr>
              <th><%= f.label :"住所" %></th>
              <td></td>
              <td colspan="3"><%= f.text_field :address, autofocus: true %></td>
            </tr>
            <tr class="field">
              <th> <%= f.label :"電話番号" %></th>
              <td></td>
              <td>
                <%= f.text_field :telephone_number, autofocus: true %>
              </td>
            </tr>
            <tr class="field">
              <th class="text-nowrap">
                <%= f.label :"パスワード" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
              </th>
              <td></td>
              <td>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr class="field">
              <th class="text-nowrap"><%= f.label :"パスワード(確認用)" %></th>
              <td></td>
              <td>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </td>
            </tr>
          </table>
          <div class="actions text-center">
            <%= f.submit "Sign up", class:"btn text-align-center btn-success" %>
          </div>
      <% end %>
    </div>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="action text-center">
    <%= link_to 'こちら', new_customer_session_path, class:"btn btn btn-primary mr-3"  %>からログインしてください。
    </div>
  </div>
</div>
