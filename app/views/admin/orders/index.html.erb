<div class="container">
    <div class="row pt-5 pb-3">
        <div class="col-md-2">
            
        </div>
    </div>
    <div class="col-md-8">
        <h3>注文履歴一覧</h3>
       <table class="table">
            <tr>
               <th>購入日時</th>
               <th>注文者</th>
               <th>注文個数</th>
               <th>注文ステータス</th>
            </tr>
            <% @orders.each do |order| %>
                <tr>
                    <td>
                        <%= link_to admin_order_path(order) do %>
                            <%= order.at_create %>
                        <% end %>
                        </td>
                    <td>
                            <%= order.customer_id %>
                    </td>
                    <td></td>
                    <td><%= order.is_active %></td>
                </tr>
            <% end %>
       </table>
    </div>
</div>