<div class="container">
    <div class="row pt-5 pb-3">
        <div class="col-md-2">
            <h3>会員一覧</h3>
        </div>
    </div>
    <div class="row">
       <table class="table">
            <tr>
               <th>会員ID</th>
               <th>氏名</th>
               <th>メールアドレス</th>
               <th>ステータス</th>
            </tr>
            <% @customer.each do |customer| %>
                <tr>
                    <td><%= customer.id %></td>
                    <td>
                        <%= link_to admin_customer_path(customer) do %>
                            <%= customer.name %>
                        <% end %>
                    </td>
                    <td><%= customer.email %></td>
                    <td><%= customer.is_active %></td>
                </tr>
            <% end %>
       </table>
    </div>
</div>