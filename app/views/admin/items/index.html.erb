<div class="container">
    <div class="row pt-5 pb-3">
        <div class="col-md-2">
            <h3>商品一覧</h3>
        </div>
        <div class="col-md-2 offset-md-8">
            <%= link_to new_admin_item_path, class: "" do %>
                <i class="far fa-plus-square fa-2x"></i>
            <% end %>
        </div>
    </div>
    <div class="row">
       <table class="table">
            <tr>
               <th>商品ID</th>
               <th>商品名</th>
               <th>税抜価格</th>
               <th>ジャンル</th>
               <th>ステータス</th>
            </tr>
            <% @items.each do |item| %>
                <tr>
                    <td><%= item.id %></td>
                    <td>
                        <%= link_to admin_item_path(item) do %>
                            <%= item.name %>
                        <% end %>
                    </td>
                    <td><%= item.price %></td>
                    <td><%= item.genre_id %></td>
                    <td><%= item.is_active %></td>
                </tr>
            <% end %>
       </table>
    </div>
</div>